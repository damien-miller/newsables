<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <br />
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, id: "froala-editor" %>
  </div>
  <br />
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>
  <br />
  <div class="field">
    <%= label_tag :tags %><br>
    <%= text_field_tag :tags %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

  <!-- Initialize the editor. -->
<script>
  $(function() {
    $('#froala-editor').froalaEditor({
      toolbarButtons: ['undo', 'redo', 'bold', 'italic', 'underline', 'strikeThrough', 'subscript', 'superscript', 'fontSize', 'paragraphStyle', 'paragraphFormat', 'align', 'outdent', 'indent', 'clearFormatting', 'selectAll', 'html']
    })
  });
</script>