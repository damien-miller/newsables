<div class="un-page-home un-home-vertical un-social-full">
    <div class="un-home">
      <%= form_for @user do |f| %>
          <% if @user.errors.any? %>
              <div class="error_messages">
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.text_field :email %>
          </div>
          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password %>
          </div>
          <div class="actions"><%= f.submit "Sign Up" %></div>
      <% end %>
        <div class="un-clearfix"></div>
    </div>
</div>


